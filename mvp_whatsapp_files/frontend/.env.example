# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Mock Mode - Set to 'mock' for local development without credentials
# Set to 'real' for Supabase validation mode
VITE_APP_MODE=mock

# Supabase Configuration (only needed in 'real' mode)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Dev Mode - Enable for Supabase validation without WhatsApp
VITE_DEV_ENDPOINTS_ENABLED=false  # Shows dev tools panel for seeding/testing
VITE_DEV_TOKEN=dev-secret-token-change-me  # Must match backend DEV_TOKEN
