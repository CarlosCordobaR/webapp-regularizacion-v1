# Application Mode
APP_MODE=mock  # 'mock' or 'real'
MOCK_SEED_ON_START=true  # Auto-seed mock data on startup

# Storage & Database Mode (for mock mode)
STORAGE_MODE=local  # 'local' or 'supabase'
DB_MODE=sqlite  # 'sqlite' or 'supabase'

# Supabase Validation Mode (for testing without WhatsApp)
WHATSAPP_ENABLED=false  # Set to false to test Supabase without WhatsApp integration
DEV_ENDPOINTS_ENABLED=false  # Enable /dev endpoints for testing (seed, test conversations, etc.)
DEV_TOKEN=dev-secret-token-change-me  # Token to protect /dev endpoints (use X-Dev-Token header)
STORAGE_PUBLIC=false  # Set to false for private storage bucket (requires signed URLs)

# Supabase Configuration (required for real mode and sync scripts)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
STORAGE_BUCKET=client-documents

# Prisma Database URL (required for Prisma migrations and schema management)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Get password from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.vqcjovttaucekugwmefj.supabase.co:5432/postgres?schema=public

# WhatsApp Business API (required for real mode when WHATSAPP_ENABLED=true)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token
WHATSAPP_APP_SECRET=your-app-secret  # For webhook signature verification

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
